var bdate = <%= bitcoin_date[0] %>;
var bmnth = <%= bitcoin_date[1] %>;
var byear = <%= bitcoin_date[2] %>;	

Highcharts.chart('bitcoin', {

title: {
    text: 'BTC vs USD Chart'
},

subtitle: {
    text: 'Source: Charts for last 7 days'
},

yAxis: {
    title: {
        text: 'Price USD'
    },
},
xAxis: {
    title: {
        text: 'Time'
    },
    type: 'datetime',
},
legend: {
    layout: 'vertical',
    align: 'right',
    verticalAlign: 'middle'
},
series : [{    
        name : 'BTC - USD',
        data: <%= @data %> ,
        pointStart: Date.UTC(byear, bmnth-1, bdate),
//      pointStart: Date.UTC(2012, 2, 6),
		pointInterval: 1000 * 60 * 60 * 24

    }]
});